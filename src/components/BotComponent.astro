<div id="botui-app" class="bg-white shadow-lg rounded-lg p-6 max-w-xl mx-auto"></div>

<script type="module">
  import BotUI from 'botui';

  document.addEventListener('DOMContentLoaded', function () {
    const bot = new BotUI('botui-app');

    bot.message.add({
      content: 'Hello! How can I assist you today?'
    });

    bot.action.text({
      action: {
        placeholder: 'Type your question...'
      }
    }).then(function (res) {
      bot.message.add({
        content: `You said: ${res.value}`
      });
    });
  });
</script>
